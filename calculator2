    private void fnPluButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        num = Double.parseDouble(screen1.getText());
        storage.setText(num+"+");
        screen1.setText("");
        operand = 1;
    }                                           

    private void fnMinButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        num = Double.parseDouble(screen1.getText());
        storage.setText(num+"-");
        screen1.setText("");
        operand = 2;
    }                                           

    private void fnMulButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        num = Double.parseDouble(screen1.getText());
        storage.setText(num+"*");
        screen1.setText("");
        operand = 3;
    }                                           

    private void fnDivButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        num = Double.parseDouble(screen1.getText());
        storage.setText(num+"/");
        screen1.setText("");
        operand = 4;
    }                                           

    private void fnDotButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        screen1.setText(screen1.getText()+".");
    }                                           

    private void fnEquButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        result(operand);
        storage.setText("");
    }                                           

    private void fnClrButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        screen1.setText("");
    }                                           

    private void fnDelButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        int length = screen1.getText().length();
        int prevLength = screen1.getText().length()-1;
        String store;
        
        if(length>0)
        {
            StringBuilder back = new StringBuilder(screen1.getText());
            back.deleteCharAt(prevLength);
            store= back.toString();
            screen1.setText(store);
        }
     }                                           

    private void radOffButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        disable();
    }                                            

    private void radOnButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        enable();
    }                                           

