    double num, ans;
    int operand;
    
    public void result(int operand)
    {
        switch(operand)
        {
            case 1:
                ans = num + Double.parseDouble(screen1.getText());
                screen1.setText(Double.toString(ans));
                break;
            case 2:
                ans = num - Double.parseDouble(screen1.getText());
                screen1.setText(Double.toString(ans));
                break;
            case 3:
                ans = num * Double.parseDouble(screen1.getText());
                screen1.setText(Double.toString(ans));
                break;
            case 4:
                ans = num / Double.parseDouble(screen1.getText());
                screen1.setText(Double.toString(ans));
                break;
        }
    }
    
    public Calc2() {
        initComponents();
        radOnButton.setEnabled(false);
        radOffButton.setEnabled(true);
    }
    public void enable()
    {
